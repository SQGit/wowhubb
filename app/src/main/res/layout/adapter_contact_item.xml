<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="match_parent" >
    <ImageView android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/image_view"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Bob Marley"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/textcolr"
        />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(626) 336-5889"
        android:layout_toRightOf="@+id/image_view"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@+id/tvName"
      />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#575757"
        android:paddingLeft="10dp"
        android:text="bob@fake.com"
        android:visibility="gone"
        android:textSize="@dimen/_12sdp"
        android:layout_alignBaseline="@+id/invite_tv"
        android:layout_alignBottom="@+id/invite_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/invite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="INVITE"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10sdp"
        android:background="@drawable/square_invite"
        android:layout_alignBottom="@+id/tvPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
