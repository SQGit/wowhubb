<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:mcv_selectionColor="#00F"
        app:mcv_showOtherDates="all"
        android:layout_marginTop="@dimen/_5sdp"
        app:mcv_tileHeight="@dimen/_20sdp"
        app:mcv_tileSize="@dimen/_35sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/headercolor"
            android:layout_height="wrap_content"
            android:text="@string/Todayevent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="@color/headercolor"
            android:text="@string/Tomorrowevent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="@color/headercolor"
            android:layout_height="wrap_content"
            android:text="@string/EventHistory" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/square"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/headercolor"
            android:text="My Events" />

        <TextView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/square"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/headercolor"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="My Reservation/ Invites" />

        <TextView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/square"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/headercolor"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Live Event Program" />

        <TextView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/square"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/headercolor"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="Registry" />
    </LinearLayout>
</LinearLayout>