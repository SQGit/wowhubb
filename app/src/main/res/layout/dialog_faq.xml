<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Event FAQs"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/closeiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/close_round" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_sym"
        android:drawablePadding="-12dp"
        android:gravity="start|center"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_sym"
            android:drawablePadding="-12dp"
            android:gravity="start|center"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textColor="@color/textcolr"
            android:text="What is the Event Age Requiremnt" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="4dp"
            card_view:cardBackgroundColor="@color/gray">

            <EditText
                android:id="@+id/faqone_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Enter answer here"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_sym"
        android:drawablePadding="-12dp"
        android:gravity="start|center"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_sym"
            android:drawablePadding="-12dp"
            android:gravity="start|center"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textColor="@color/textcolr"
            android:text="This is a kids friendly event" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="4dp"
            card_view:cardBackgroundColor="@color/gray">

            <EditText
                android:id="@+id/faqtwo_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Enter answer here"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_sym"
        android:drawablePadding="-12dp"
        android:gravity="start|center"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_sym"
            android:drawablePadding="-12dp"
            android:gravity="start|center"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textColor="@color/textcolr"
            android:text="What are the event Parking?" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="4dp"
            card_view:cardBackgroundColor="@color/gray">

            <EditText
                android:id="@+id/faqthree_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Enter answer here"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lnr_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">


            <EditText
                android:id="@+id/faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_action_sym"
                android:drawablePadding="-12dp"
                android:gravity="start|center"
                android:hint="Enter your Question here?"
                android:inputType="textCapSentences"
                android:paddingLeft="-10dp"
                android:singleLine="true"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_12sdp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="4dp"
                card_view:cardBackgroundColor="@color/gray">

                <EditText
                    android:id="@+id/faq_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter answer here"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/save_tv_faq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/btnbg"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addmore_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/plus"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="Add More Event FAQs"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/faq_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

    </ListView>


</LinearLayout>