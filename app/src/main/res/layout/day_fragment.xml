<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id"
    xmlns:htext="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lnr_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#efd4dd"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="2">


            <LinearLayout
                android:id="@+id/lnr_start_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/clock_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Event Start Time"
                    android:textColor="@color/brown"
                    android:textSize="@dimen/_12sdp" />

                <FrameLayout
                    android:id="@+id/frame_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/start_timetv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:cursorVisible="true"
                            android:editable="false"
                            android:focusable="true"
                            android:gravity="left"
                            android:hint=""

                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textColor="@color/brown"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_fromdate1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_end_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/clock_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Event End Time"
                    android:textColor="@color/brown"
                    android:textSize="@dimen/_12sdp" />


                <FrameLayout
                    android:id="@+id/frame_time2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/end_timetv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:editable="false"
                            android:focusable="true"
                            android:gravity="left"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:textColor="@color/brown"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_fromdate2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeslot_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="right"
                android:text="Time Slot 1"
                android:textColor="@color/colorAccent"
                htext:animateType="anvil"
                htext:fontAsset="fonts/lato.ttf" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_135sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:background="@color/tabcolor" />


                        <TextView
                            android:id="@+id/color"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:layout_weight="4.5"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">



                                <FrameLayout
                                    android:id="@+id/frame_istarttime"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true">


                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/l1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            android:id="@+id/txt_start_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="36dp"
                                            android:layout_gravity="left"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:editable="false"
                                            android:gravity="left"
                                            android:hint="Itinerary Start Time"
                                            android:imeOptions="actionNext"
                                            android:singleLine="true"
                                            android:textColor="@color/textcolr"
                                            android:textColorHint="@color/textcolr"
                                            android:textSize="@dimen/_12sdp" />
                                    </android.support.design.widget.TextInputLayout>


                                    <LinearLayout
                                        android:id="@+id/lnr_start"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                    </LinearLayout>
                                </FrameLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/frame_goodstype"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true">


                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/l2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/_1sdp">

                                        <EditText
                                            android:id="@+id/txt_end_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="36dp"
                                            android:cursorVisible="false"
                                            android:focusable="false"
                                            android:hint="Itinerary End Time"
                                            android:singleLine="true"
                                            android:textColor="@color/textcolr"
                                            android:textColorHint="@color/textcolr"
                                            android:textSize="@dimen/_12sdp" />
                                    </android.support.design.widget.TextInputLayout>


                                    <LinearLayout
                                        android:id="@+id/lnr_end"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                    </LinearLayout>
                                </FrameLayout>


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/lnr_edt_event_agenta"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/edt_event_agenta"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:hint="Event Agenda"
                                        android:imeOptions="actionNext"
                                        android:singleLine="true"
                                        android:textColor="@color/textcolr"
                                        android:textColorHint="@color/textcolr"
                                        android:textSize="@dimen/_12sdp" />
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_weight="1">


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/lnr_edt_facilitator"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/edt_facilitator"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:hint="Facilitator"
                                        android:imeOptions="actionDone"
                                        android:singleLine="true"
                                        android:textColor="@color/textcolr"
                                        android:textColorHint="@color/textcolr"
                                        android:textSize="@dimen/_12sdp" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/lnr_edt_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:hint="Event Location Venue"
                                android:imeOptions="actionDone"
                                android:singleLine="true"
                                android:visibility="gone"
                                android:textColor="@color/textcolr"
                                android:textColorHint="@color/textcolr"
                                android:textSize="@dimen/_12sdp" />
                        </android.support.design.widget.TextInputLayout>




                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/lnr_eventlocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spin_event_loc_venue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@android:drawable/btn_dropdown"
                            android:hint="Event Location Venue"
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            app:met_textColorHint="@color/view" />


                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/save_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btnbg"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingTop="@dimen/_5sdp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/viewallvenue_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/view_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:text="View all TimeSlots"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11sdp" />

            <!--  <TextView
                  android:id="@+id/addmoreevent_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/plus"
                  android:drawablePadding="@dimen/_5sdp"
                  android:gravity="center"
                  android:text="Add Timeslot"
                  android:textColor="@color/colorPrimary"
                  android:textSize="@dimen/_11sdp" />-->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
