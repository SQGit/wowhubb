<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lnr_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"

       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_name"
                    android:drawablePadding="-12dp"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/_17sdp"
                    android:paddingLeft="-12dp"
                    android:text="Arts of the Soul Festival"
                    android:textColor="@color/textcolr" />


                <TextView
                    android:id="@+id/event_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/_12sdp"
                    android:text="Arts, Culture and Films"
                    android:textColor="@color/textcolr" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true">


                <ImageView
                    android:id="@+id/view_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/play_video"/>


                </FrameLayout>
            </LinearLayout>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/brown"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="8">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_show_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/event_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:textSize="@dimen/_11sdp"
                    android:text="330, Southwest Drive, Houston, Tx 77457"
                    android:textColor="@color/textcolr" />


                <TextView
                    android:id="@+id/event_opentime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:singleLine="false"
                    android:textSize="@dimen/_11sdp"
                    android:text="Opens@ 7:00 AM"
                    android:textColor="@color/textcolr" />



                <TextView
                    android:id="@+id/event_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:textSize="@dimen/_11sdp"
                    android:text="713-555-5555"
                    android:textColor="@color/textcolr" />


                <TextView
                    android:id="@+id/event_attendsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:textSize="@dimen/_11sdp"
                    android:text="100 Amending"
                    android:textColor="@color/textcolr" />



                <TextView
                    android:id="@+id/visit_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/visit_page"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:clickable="true"
                    >



                <ImageView
                    android:id="@+id/img_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/share_icon"/>


                </FrameLayout>




            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>