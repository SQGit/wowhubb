<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:fadeScrollbars="false"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/backtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/whitepre_arrow"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="left"
                    android:padding="@dimen/_10sdp"
                    android:text="Share Your Thoughts"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageview_profile"
                        android:layout_width="@dimen/_47sdp"
                        android:layout_height="@dimen/_47sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:src="@drawable/profile_img"
                        app:civ_border_color="@color/graybg"
                        app:civ_border_width="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/feed_item_profile_pic"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hoster_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ramya Rajaraman"
                            android:textColor="@color/textcolr"
                            android:textSize="@dimen/feed_item_profile_name" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/hoster_designation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/timestamp"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/link_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="URL Link"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:inputType="textVisiblePassword"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/grey">

                    </View>
                </android.support.design.widget.TextInputLayout>
                <EditText
                    android:id="@+id/thoughts_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/rounder_cornor"
                    android:hint="@string/whatsonyourmind"
                    android:lines="5"
                    android:maxLines="4"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/dialoggrey"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/publishtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:background="@drawable/btnbg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:text="Publish"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/pic_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/pic_image_icon" />

                <ImageView
                    android:id="@+id/video_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/pic_video_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/photo_view"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@color/gray"
                        android:visibility="gone"

                        android:layout_margin="@dimen/_10sdp"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/close_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/close_icon" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/videoframe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.devbrackets.android.exomedia.ui.widget.VideoView
                        android:id="@+id/video_view"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:visibility="gone"
                        app:useDefaultControls="true"
                        android:background="@color/gray"

                        app:videoScale="centerCrop" />
                    <ImageView
                        android:id="@+id/videoclose_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_gravity="right"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/close_icon" />

                </FrameLayout>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>