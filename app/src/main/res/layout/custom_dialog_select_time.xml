<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/itinery_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorPrimary"
                    android:text="Itinerary Start Time"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/close_round"/>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/graybg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_sym"
                android:drawablePadding="-12dp"
                android:gravity="start|center"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingLeft="-15dp"
                android:paddingTop="@dimen/_2sdp"
                android:text="Hours"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_hours_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minus"/>




            <TextView
                android:id="@+id/time_hour"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="00"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/textcolr"
                android:layout_marginLeft="@dimen/_30sdp"
                android:background="@drawable/custom_round"/>



            <ImageView
                android:id="@+id/img_hours_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:background="@drawable/plusround"/>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/graybg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_sym"
                android:drawablePadding="-12dp"
                android:gravity="start|center"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingLeft="-15dp"
                android:paddingTop="@dimen/_2sdp"
                android:text="Minutes"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_mins_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minus"/>

            <TextView
                android:id="@+id/time_min"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="00"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:background="@drawable/custom_round"/>

            <ImageView
                android:id="@+id/img_mins_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:background="@drawable/plusround"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/graybg"
            android:weightSum="2"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <EditText
                    android:id="@+id/txt_am"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_action_sym"
                    android:drawablePadding="-12dp"
                    android:gravity="center"
                    android:background="@null"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="-15dp"
                    android:paddingTop="@dimen/_2sdp"
                    android:hint="AM"
                    android:textColor="@color/view"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="1">


                <com.suke.widget.SwitchButton
                    android:id="@+id/switch_am"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    app:sb_checked="false"
                    app:sb_checked_color="@color/colorPrimary"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/graybg"
            android:weightSum="2"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


            <EditText
                android:id="@+id/txt_pm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_action_sym"
                android:drawablePadding="-12dp"
                android:gravity="center"
                android:background="@null"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingLeft="-15dp"
                android:paddingTop="@dimen/_2sdp"
                android:hint="PM"
                android:textColor="@color/view"
                android:textSize="@dimen/_13sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="1">


                <com.suke.widget.SwitchButton
                    android:id="@+id/switch_pm"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    app:sb_checked="false"
                    app:sb_checked_color="@color/colorPrimary"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:gravity="center"
            android:orientation="vertical">



            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Ok"
                android:textAllCaps="false"
                android:background="@drawable/btnbg"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>