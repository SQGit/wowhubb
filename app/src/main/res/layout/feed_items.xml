        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="description"
                android:textColor="@color/textcolr"
                android:textSize="@dimen/feed_item_timestamp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--  <com.wang.avi.AVLoadingIndicatorView
                      android:id="@+id/avi"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:visibility="invisible"
                      app:indicatorColor="#e91e63"
                      app:indicatorName="BallSpinFadeLoaderIndicator" />-->
                <ImageView
                    android:id="@+id/feedImage1"
                    android:layout_width="match_parent"
                    android:layerType="software"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/_150sdp"
                    android:background="@color/gray" />


            </FrameLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:weightSum="2"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                   >

                    <TextView
                        android:id="@+id/eventtopic_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ramya's Birthday lets celebrate!!"
                        android:textColor="@color/textcolr"
                        android:textSize="@dimen/_9sdp" />
                    <TextView
                        android:id="@+id/otherurl_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="www.ramya.com/birthday"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Address "
                        android:maxLines="2"
                        android:textColor="@color/textcolr"
                        android:textSize="@dimen/_9sdp" />



                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray">

            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Event Highlights"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/framevideo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray">

                        <ImageView
                            android:id="@+id/video0_iv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layerType="software"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/video1plus_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />


                    </FrameLayout>

                    <!-- <com.devbrackets.android.exomedia.ui.widget.VideoView
                         android:id="@+id/video_view"
                         android:layout_width="@dimen/_100sdp"
                         android:layout_height="wrap_content"
                         app:useDefaultControls="true"/>-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/framevideo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray">

                        <ImageView
                            android:id="@+id/highlight1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layerType="software"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/video2plus_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />


                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/framevideo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray">

                        <ImageView
                            android:id="@+id/highlight2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_gravity="center"
                            android:layerType="software"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/video3plus_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />


                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/viewwow_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="left"
                        android:text="Wowsome"
                        android:visibility="invisible"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/viewcomments_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="right"
                            android:visibility="gone"
                            android:text="Comments"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/viewshare_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:visibility="gone"
                            android:gravity="right"
                            android:text="Share"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/gray">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">


                        <TextView
                            android:id="@+id/wowsome_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/wowsomes_icon"
                            android:drawablePadding="@dimen/_3sdp"
                            android:text="Wowsomes"
                            android:padding="@dimen/_3sdp"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@drawable/selector_text"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/comments_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/comments_icon"
                            android:drawablePadding="@dimen/_3sdp"
                            android:padding="@dimen/_3sdp"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:text="Comments"
                            android:textColor="@drawable/selector_comments"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/share_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/shares_icon"
                            android:drawablePadding="@dimen/_3sdp"
                            android:textColor="@drawable/selector_shares"
                            android:padding="@dimen/_3sdp"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:text="Shares"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewmore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:padding="@dimen/_7sdp"
                    android:textColor="@drawable/selector_text"
                    android:text="View More Details"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>