<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/colorPrimary"
        android:weightSum="3"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/whitepre_arrow"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2">



            <TextView
                android:id="@+id/txt_provider_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wowtag"
                android:gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.5">

        </LinearLayout>


    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="vertical"
                android:background="@drawable/border_graybg">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/exc_icon"/>




                        <TextView
                            android:id="@+id/wowtagid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_17sdp"
                            android:text="Craigs Birthday 2018"/>

                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/black_30"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:background="@drawable/transparent_curve"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">


                        <com.devbrackets.android.exomedia.ui.widget.VideoView
                            android:id="@+id/wowtag_video"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            app:useDefaultControls="true"
                            app:videoScale="centerCrop" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/transparent_curve"
                        android:weightSum="9.5"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="2">



                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/pro_img"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_3sdp"
                                android:src="@drawable/profile_img"
                                app:civ_border_color="@color/graybg"
                                app:civ_border_width="1dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_weight="4">


                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_87"
                                android:singleLine="false"
                                android:textSize="@dimen/_12sdp"
                                android:text="Emeka Daniels"/>

                            <TextView
                                android:id="@+id/user_wowtagid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:singleLine="false"
                                android:textSize="@dimen/_8sdp"
                                android:text="Emeka Daniels"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_gravity="center"
                            android:layout_weight="3.5">


                            <TextView
                                android:id="@+id/wowtag_event_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/_9sdp"
                                android:singleLine="false"
                                android:text="00:00 AM - 00:00 PM"/>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/event_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/_12sdp"
                            android:text="Hebron Plus"/>

                        <TextView
                            android:id="@+id/eventvenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_54"
                            android:textSize="@dimen/_9sdp"
                            android:text="Minute Maid Hall"/>


                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_54"
                            android:textSize="@dimen/_9sdp"
                            android:text="1234, White Lane Av Houston Texas- 77798"/>


                        <TextView
                            android:id="@+id/wowtag_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_54"
                            android:textSize="@dimen/_9sdp"
                            android:text="13th -14th January 2017"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/gray_likesbg"
                        android:gravity="center"
                        android:weightSum="3">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_8sdp"
                                android:drawableLeft="@drawable/shares_icon"
                                android:gravity="left"
                                android:paddingLeft="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_4sdp"
                                android:text="100 Shares"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_8sdp"
                                android:gravity="left"
                                android:paddingLeft="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_4sdp"
                                android:drawableLeft="@drawable/attending_icon"
                                android:text="1000 Attending"/>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_8sdp"
                                android:gravity="left"
                                android:paddingLeft="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_4sdp"
                                android:drawableLeft="@drawable/views_icon"
                                android:text="1000 Views"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="3">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/btn_rsvp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:textSize="@dimen/_13sdp"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:textColor="@color/white"
                                android:text="RSVP"
                                android:background="@drawable/curve_btnbg"/>
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/lnr_wowtag_reminder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/wowtag_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/calender_wowtag_icon"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/viewmore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/black_87"
                            android:text="View More"/>
                    </LinearLayout>


</LinearLayout>








            </LinearLayout>
        </LinearLayout>
    </ScrollView>







</LinearLayout>