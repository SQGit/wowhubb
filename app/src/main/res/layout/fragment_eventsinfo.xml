<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/top"
    android:layout_height="match_parent"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lnr_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="8">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_weight="3">


                                        <ImageView
                                            android:id="@+id/img_show_events"
                                            android:layout_width="match_parent"
                                            android:layout_gravity="top"
                                            android:layout_height="wrap_content"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:orientation="vertical">



                                        <TextView
                                            android:id="@+id/event_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:singleLine="false"
                                            android:textSize="@dimen/_15sdp"
                                            android:textStyle="bold"
                                            android:text="Join the Worlds Greatest Fashion Show"
                                            android:textColor="@color/black_87" />


                                        <TextView
                                            android:id="@+id/event_venue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="start|center"
                                            android:singleLine="false"
                                            android:textSize="@dimen/_11sdp"
                                            android:text="Minute Maid Center Houston"
                                            android:textColor="@color/black_54"/>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/_6sdp"
                                                    android:layout_gravity="top"
                                                    android:background="@drawable/map_icon"/>

                                                <TextView
                                                    android:id="@+id/event_contact"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                  android:layout_gravity="top"
                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                    android:singleLine="false"
                                                    android:textSize="@dimen/_11sdp"
                                                    android:text="12235 Florida Oaks MI MA 77448"
                                                    android:textColor="@color/textcolr" />

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="top"
                                                    android:background="@drawable/time_icon"/>

                                                <TextView
                                                    android:id="@+id/event_time"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="top"
                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                    android:singleLine="false"
                                                    android:textSize="@dimen/_11sdp"
                                                    android:text="7.00AM to 4:00PM"
                                                    android:textColor="@color/textcolr" />

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="horizontal">


                                                        <ImageView
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_gravity="center"
                                                            android:background="@drawable/date_icon"/>

                                                        <TextView
                                                            android:id="@+id/event_date"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_gravity="top"
                                                            android:layout_marginLeft="@dimen/_3sdp"
                                                            android:singleLine="false"
                                                            android:textSize="@dimen/_11sdp"
                                                            android:text="July 28th"
                                                            android:textColor="@color/textcolr" />

                                                </LinearLayout>


                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="@dimen/_10sdp"
                                                    android:orientation="vertical">
                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="horizontal">


                                                                <ImageView
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_gravity="center"
                                                                    android:background="@drawable/tic_icon"/>

                                                                <TextView
                                                                    android:id="@+id/event_getticket"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_gravity="top"
                                                                    android:layout_marginLeft="@dimen/_3sdp"
                                                                    android:singleLine="false"
                                                                    android:textSize="@dimen/_11sdp"
                                                                    android:text="Get Tickets from"
                                                                    android:textColor="@color/textcolr" />

                                                        </LinearLayout>


                                                        <TextView
                                                            android:id="@+id/event_getticketlink"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:gravity="start|center"
                                                            android:singleLine="false"
                                                            android:layout_marginLeft="@dimen/_10sdp"
                                                            android:paddingLeft="@dimen/_10sdp"
                                                            android:textSize="@dimen/_8sdp"
                                                            android:text="@string/ticketlink"
                                                            android:textColor="@color/textcolr" />

                                                </LinearLayout>
                                        </LinearLayout>

                                </LinearLayout>




                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">


                                <TextView
                                    android:id="@+id/txt_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textcolr"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. "/>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="7">



                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"></LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_weight="5">


                                        <TextView
                                            android:id="@+id/txt_interested"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Interested"
                                            android:textColor="@color/white"
                                            android:paddingLeft="@dimen/_7sdp"
                                            android:paddingRight="@dimen/_7sdp"
                                            android:paddingTop="@dimen/_3sdp"
                                            android:paddingBottom="@dimen/_3sdp"
                                            android:background="@drawable/btnbg"/>



                                        <TextView
                                            android:id="@+id/txt_attending"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Attending"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:textColor="@color/white"
                                            android:paddingLeft="@dimen/_7sdp"
                                            android:paddingRight="@dimen/_7sdp"
                                            android:paddingTop="@dimen/_3sdp"
                                            android:paddingBottom="@dimen/_3sdp"
                                            android:background="@drawable/btnbg"/>
                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">



                                        <ImageView
                                            android:id="@+id/img_share"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:background="@drawable/share_icon"/>
                                </LinearLayout>

                        </LinearLayout>





                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="90 Wowsomes"
                                            android:textSize="@dimen/_7sdp"
                                            android:drawablePadding="@dimen/_3sdp"
                                            android:drawableLeft="@drawable/wowsomes_icon"/>


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="9000 Shares"
                                            android:textSize="@dimen/_7sdp"
                                            android:drawablePadding="@dimen/_3sdp"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:drawableLeft="@drawable/shares_icon"/>



                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="30,000 Views"
                                            android:textSize="@dimen/_7sdp"
                                            android:drawablePadding="@dimen/_3sdp"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:drawableLeft="@drawable/view_icon"/>



                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="1000 Attending"
                                            android:textSize="@dimen/_7sdp"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:drawableLeft="@drawable/attending_icon"/>






                                </LinearLayout>





                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/black_54"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/txt_contactorganizer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contact Organizer"
                                    android:textColor="@color/white"
                                    android:paddingLeft="@dimen/_7sdp"
                                    android:paddingRight="@dimen/_7sdp"
                                    android:paddingTop="@dimen/_3sdp"
                                    android:paddingBottom="@dimen/_3sdp"
                                    android:background="@drawable/btnbg"/>




                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/comment_black"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_20sdp"/>




                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/phone_icon"/>




                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/mail_icon"/>




                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/globe_icon"/>




                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</ScrollView>




</LinearLayout>