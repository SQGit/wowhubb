<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/eventlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/pinktriangle"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/quickhint_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/hint_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">


            <ImageView
                android:id="@+id/quickiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quick_icon" />

            <TextView
                android:id="@+id/quicktv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Create A Quick \nEvent Invite card"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@drawable/quickevent_color_selector"
                android:textSize="@dimen/_11sdp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingBottom="@dimen/_30sdp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/generalhint_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/_12sdp"

                android:src="@drawable/general_hint_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/generaleventiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/gen_create" />

            <TextView
                android:id="@+id/generaleventtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Create A Complete \nEvent Invite Card"
                android:textColor="@color/dialoggrey"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>