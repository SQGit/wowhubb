<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_parent_rounded_corner"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fromlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frame_goodstype"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/fromtv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/From"
                            android:singleLine="true"
                            android:textColor="@color/textcolr"
                            android:textColorHint="@color/textcolr"
                            android:textSize="@dimen/_12sdp" />
                    </android.support.design.widget.TextInputLayout>


                    <LinearLayout
                        android:id="@+id/layout_fromdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp">

                <EditText
                    android:id="@+id/food_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Event"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13sdp" />


            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tolv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frame_to"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp">

                        <EditText
                            android:id="@+id/totv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:hint="@string/To"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true"
                            android:textColor="@color/textcolr"
                            android:textColorHint="@color/textcolr"
                            android:textSize="@dimen/_12sdp" />
                    </android.support.design.widget.TextInputLayout>


                    <LinearLayout
                        android:id="@+id/layout_todate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_organiser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp">

                <EditText
                    android:id="@+id/orrganizer_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Who"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13sdp" />



            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>